  "suggest": {
    "joomlatools/platform-legacy": "Includes deprecated library classes no longer used in the core"
  },
  "autoload": {
    "psr-0": {"Composer": "install/scripts"}
  },
  "scripts": {
    "post-create-project-cmd": "Composer\\Project::install"
  }
